<%= form_for(@category, :remote => true, :html => { :'data-type' => 'html'}) do |f| %>
<div class="row">
  <div class="span3">
    <%= f.label :label %>
    <%= f.text_field :label, :class => 'new-category-label' %></td>
  </div>
</div>
<div class="row">
  <div class="span3">
    <%= f.submit 'Create', :class => 'btn btn-primary btn-small submit-new-category'  %>
    <%= link_to 'Cancel', '#', :class => 'btn btn-danger btn-small cancel-new-category'  %>
  </div>
</div>
<% end %>
